@model IEnumerable<MovieApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("New", "Movies")'">Add New Movie</button>
<br />
<br />
@if (!Model.Any())
{
    <h1>We dont have any movies yet!</h1>
}
else
{
    var movies = Model;
    <table class="table table-bordered alert-secondary table-hover">
        <tbody>
            <tr>
                <td class="alert-light text-center">MOVIE NAME</td>
                <td class="alert-light text-center">GENRE</td>
            </tr>
            @foreach (var movie in movies)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>

}

