@model List<MovieApp.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CUSTOMERS</h2>
@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tbody>
            @for(int i=0;i<Model.Count();i++)
            {
                <tr>
                    <td>@Html.ActionLink(Model[i].Name, "Details", "Customers", new { id = Model[i].Id }, null)</td>

                </tr>
            }
        </tbody>
    </table>
}